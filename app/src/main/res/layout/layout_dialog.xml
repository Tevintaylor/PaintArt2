<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="ENTER NUMBER YOU NEED!" />

    <TextView
        android:id="@+id/setNumColumnsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:padding="3dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Enter Number of Columns" />

    <EditText
        android:id="@+id/setNumColumns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:hint="column number"
        android:background="@drawable/button_style"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:inputType="number" />

    <TextView
        android:id="@+id/setNumRowsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:text="Enter Number of Rows" />

    <EditText
        android:id="@+id/setNumRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="10dp"
        android:hint="row number"
        android:textColor="#ffffff"
        android:background="@drawable/button_style"
        android:textColorHint="#ffffff"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:inputType="number" />



</LinearLayout>